
public class Spaces {
public static void main(String[] args)
{
	String s="My name is smith";
	char str[]=new char[100];
	str=s.toCharArray();
	System.out.println(str.length);
	for(int i=0;i<str.length;i++)
	{
		if(str[i]==' ')
		{
			str[i]='%';
		}
	}
	for(int i=0;i<str.length;i++)
	{
		System.out.println(str[i]);
	}
	
}
}
